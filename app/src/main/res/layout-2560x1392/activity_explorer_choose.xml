<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#000000">
    <RelativeLayout
        android:id="@+id/left_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:descendantFocusability="blocksDescendants">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn1_left"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#B22222"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="@string/unmounted"
                />
            <Button
                android:id="@+id/btn2_left"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="@string/unmounted"
                />
            <Button
                android:id="@+id/btn3_left"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="@string/unmounted"/>
            <Button
                android:id="@+id/btn4_left"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="@string/unmounted"/>
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/right_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:descendantFocusability="blocksDescendants">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn1_right"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#B22222"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="@string/unmounted"/>
            <Button
                android:id="@+id/btn2_right"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="@string/unmounted"
                />
            <Button
                android:id="@+id/btn3_right"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="@string/unmounted"/>
            <Button
                android:id="@+id/btn4_right"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="@string/unmounted"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
