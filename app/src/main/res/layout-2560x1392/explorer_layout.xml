<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#000000">

    <RelativeLayout
        android:id="@+id/left_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:descendantFocusability="blocksDescendants">
        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="450dp"
            android:layout_centerInParent="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center">
                <ImageView
                    android:id="@+id/battery_left"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/easyicon_battery_5"/>
                <TextView
                    android:id="@+id/battery_text_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:textSize="14sp"
                    android:text=""
                    android:textColor="@color/white"
                    />
            </LinearLayout>

        </RelativeLayout>
        <ProgressBar
            android:id="@+id/loading_progressbar_left"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"/>
        <GridView
            android:id="@+id/explorer_left"
            android:layout_width="360dp"
            android:layout_height="360dp"
            android:layout_centerInParent="true"
            android:numColumns="3"></GridView>
        <RelativeLayout
            android:id="@+id/alert_layout_left"
            android:layout_width="360dp"
            android:layout_height="360dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:background="@drawable/alert_background">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/easyicon_return"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"/>
            <TextView
                android:id="@+id/alert_txt_left"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16.0sp"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/alert_confirm_left"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="@color/black"
                android:background="@color/white"
                android:textSize="20.0sp"
                android:text="@string/confirm"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/selected_left"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/arrow_left"/>
        <ImageView
            android:id="@+id/arrow_left"
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:src="@mipmap/arrow"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/explorer_left"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/right_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:descendantFocusability="blocksDescendants">
        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="450dp"
            android:layout_centerInParent="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center">
                <ImageView
                    android:id="@+id/battery_right"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/easyicon_battery_5"/>
                <TextView
                    android:id="@+id/battery_text_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:textSize="14sp"
                    android:text=""
                    android:textColor="@color/white"
                    />
            </LinearLayout>

        </RelativeLayout>
        <ProgressBar
            android:id="@+id/loading_progressbar_right"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"/>
        <GridView
            android:id="@+id/explorer_right"
            android:layout_width="360dp"
            android:layout_height="360dp"
            android:layout_centerInParent="true"
            android:numColumns="3"></GridView>
        <RelativeLayout
            android:id="@+id/alert_layout_right"
            android:layout_width="360dp"
            android:layout_height="360dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:background="@drawable/alert_background">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/easyicon_return"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"/>
            <TextView
                android:id="@+id/alert_txt_right"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16.0sp"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/alert_confirm_right"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="@color/black"
                android:background="@color/white"
                android:textSize="20.0sp"
                android:text="@string/confirm"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/selected_right"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/arrow_right"/>
        <ImageView
            android:id="@+id/arrow_right"
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:src="@mipmap/arrow"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/explorer_right"/>
    </RelativeLayout>
</LinearLayout>
