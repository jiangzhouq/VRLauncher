<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#000000">
    <RelativeLayout
        android:id="@+id/left_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:descendantFocusability="blocksDescendants">
        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="450dp"
            android:layout_centerInParent="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center">
                <ImageView
                    android:id="@+id/battery_left"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/easyicon_battery_5"/>
                <TextView
                    android:id="@+id/battery_text_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:textSize="14sp"
                    android:text=""
                    android:textColor="@color/white"
                    />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="640px"
            android:layout_height="360px"
            android:layout_centerInParent="true"
            android:id="@+id/bg_home"
            android:background="@drawable/bg_home_b">
            <GridView
                android:id="@+id/list_left"
                android:numColumns="3"
                android:layout_centerInParent="true"
                android:layout_width="420px"
                android:layout_height="280px"
                android:clickable="false"
                >
            </GridView>
            <LinearLayout
                android:layout_width="420px"
                android:layout_height="280px"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:id="@+id/home_left">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:id="@+id/iPlayer_left"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        >
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/player_left"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:id="@+id/file_explorer_left"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/game1_left"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/game2_left"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="420px"
                android:layout_height="280px"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:id="@+id/launchpad_left">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:id="@+id/icon1_left"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        >
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/icon2_left"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/icon3_left"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:id="@+id/icon4_left"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/icon5_left"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/icon6_left"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="420px"
                android:layout_height="280px"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:id="@+id/uninstall_alert_left">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/uninstall_alert_left_icon"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/icon_circle">
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/apk_uninstall_alert1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/apk_uninstall_alert1"
                        android:textColor="@color/white"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/apk_uninstall_alert2"
                        android:textColor="@color/blue_dark"
                        android:gravity="center"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <!--<Button-->
                        <!--android:id="@+id/uninstall_alert_left_cancel"-->
                        <!--android:layout_width="96px"-->
                        <!--android:layout_height="33px"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:layout_alignParentLeft="true"-->
                        <!--android:textColor="@color/white"-->
                        <!--android:text="@android:string/cancel"-->
                        <!--android:background="@drawable/uninstall_btn"/>-->
                    <Button
                        android:id="@+id/uninstall_alert_left_confirm"
                        android:layout_width="192px"
                        android:layout_height="33px"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        android:text="@string/apk_uninstall_confirm"
                        android:background="@drawable/uninstall_btn"/>
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/alert_layout_left"
            android:layout_width="360dp"
            android:layout_height="360dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:background="@drawable/alert_background">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/easyicon_return"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"/>
            <TextView
                android:id="@+id/alert_txt_left"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16.0sp"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/alert_confirm_left"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="@color/black"
                android:background="@color/white"
                android:textSize="20.0sp"
                android:text="@string/confirm"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"/>
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/right_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:descendantFocusability="blocksDescendants">
        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="450dp"
            android:layout_centerInParent="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center">
                <ImageView
                    android:id="@+id/battery_right"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/easyicon_battery_5"/>
                <TextView
                    android:id="@+id/battery_text_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:textSize="14sp"
                    android:text=""
                    android:textColor="@color/white"
                    />
            </LinearLayout>

        </RelativeLayout>
        <GridView
            android:id="@+id/list_right"
            android:numColumns="3"
            android:layout_centerInParent="true"
            android:layout_width="420dp"
            android:layout_height="wrap_content"
            android:clickable="false">
        </GridView>
        <GridView
            android:id="@+id/explorer_right"
            android:layout_width="360dp"
            android:layout_height="360dp"
            android:layout_centerInParent="true"
            android:numColumns="3"></GridView>
        <RelativeLayout
            android:id="@+id/alert_layout_right"
            android:layout_width="360dp"
            android:layout_height="360dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:background="@drawable/alert_background">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/easyicon_return"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"/>
            <TextView
                android:id="@+id/alert_txt_right"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16.0sp"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/alert_confirm_right"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="@color/black"
                android:background="@color/white"
                android:textSize="20.0sp"
                android:text="@string/confirm"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/selected_right"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/arrow_right"/>
    </RelativeLayout>
</LinearLayout>
